{
  "env": {
    "mocha": true
  },
  "extends": [
    "plugin:mocha/recommended",
    "plugin:react/recommended",
    "standard"
  ],
  "parser": "@babel/eslint-parser",
  "plugins": ["mocha"],
  "rules": {
    "semi": [2, "always"],
    "semi-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
